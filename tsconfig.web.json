{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/renderer/src/*"
      ],
      "@lib/*": [
        "src/renderer/lib/*"
      ],
    },
    "types": [
      "vite-plugin-glsl/ext",
      "vite-plugin-arraybuffer/types"
    ]
  }
}
